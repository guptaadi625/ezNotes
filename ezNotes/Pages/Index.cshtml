@page
@model IndexModel
@{
    ViewData["Title"] = "Notes";
}

<link href="https://fonts.googleapis.com/css?family=Inter:400,600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
        background: #f7f7f8;
        margin: 0;
        padding: 0;
    }
    .notion-header {
        background: #fff;
        padding: 2rem 2rem 1rem 2rem;
        border-bottom: 1px solid #ececec;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .notion-header h1 {
        font-size: 2rem;
        font-weight: 600;
        margin: 0;
        color: #37352f;
    }
    .notes-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 1.5rem;
    }
    .note-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(55,53,47,0.04);
        padding: 1.5rem;
        min-height: 160px;
        display: flex;
        flex-direction: column;
        transition: box-shadow 0.2s;
        cursor: pointer;
    }
    .note-card:hover {
        box-shadow: 0 4px 16px rgba(55,53,47,0.10);
    }
    .note-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #37352f;
        margin-bottom: 0.5rem;
    }
    .note-content {
        color: #6b6b6b;
        font-size: 1rem;
        flex: 1;
    }
    .add-note-btn {
        background: #ececec;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: #37352f;
        cursor: pointer;
        margin-left: auto;
        transition: background 0.2s;
    }
    .add-note-btn:hover {
        background: #d3d3d3;
    }
</style>

<div class="notion-header">
    <h1>ezNotes</h1>
    <button class="add-note-btn" onclick="location.href='@Url.Page("Create")'">+ New Note</button>
</div>

<div class="notes-container">
    @if (Model.Notes != null && Model.Notes.Any())
    {
        foreach (var note in Model.Notes)
        {
            <div class="note-card" onclick="location.href='@Url.Page("Details", new { id = note.Id })'">
                <div class="note-title">@note.Title</div>
                <div class="note-content">@note.Content</div>
            </div>
        }
    }
    else
    {
        <div style="grid-column: 1/-1; text-align: center; color: #aaa; padding: 2rem;">
            No notes yet. Click <b>+ New Note</b> to get started!
        </div>
    }
</div>